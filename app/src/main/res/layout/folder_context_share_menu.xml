<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_menu_folder"
    android:gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/folder_share_item_above"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_radius_white_filter_folder"
        android:layout_marginHorizontal="6dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/folder_share_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            >

            <ImageButton
                android:id="@+id/folder_share_item_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_record_btn_folder"
                android:src="@drawable/ic_microphone_folder" />

            <TextView
                android:id="@+id/folder_share_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="haha"
                android:layout_marginBottom="6dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/folder_share_item_image"
                />

            <TextView
                android:id="@+id/folder_share_item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 điểm"
                android:textSize="12sp"
                android:layout_toRightOf="@id/folder_share_item_image"
                android:layout_below="@id/folder_share_item_title"
                />


            <TextView
                android:id="@+id/folder_share_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/folder_share_item_amount"
                android:layout_below="@id/folder_share_item_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_solid_bottom_filter_folder"
                android:layout_below="@id/folder_share_item_image"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="1"
            android:layout_marginLeft="6dp"
            android:layout_marginVertical="14dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginRight="25dp"
                >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_messenger_folder"
                    android:background="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messenger"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginRight="25dp"
                >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_zalo_folder"
                    android:background="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zalo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_marginRight="25dp"
                >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_outlook_folder"
                    android:background="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outlook"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_marginRight="25dp"
                >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_gmail_folder"
                    android:background="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_column="4"
                android:layout_row="0"
                >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_chatmessage_folder"
                    android:background="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tin nhắn"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/folder_filter_item_destroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="6dp"
        android:padding="18dp"
        android:textSize="20dp"
        android:textColor="@color/pink_500"
        android:text="Hủy"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_radius_white_filter_folder"
        android:layout_below="@+id/folder_share_item_above"
        />
</RelativeLayout>