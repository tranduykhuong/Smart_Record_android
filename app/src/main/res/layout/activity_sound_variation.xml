<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/variation_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_500"
        android:paddingVertical="15dp"
        >

        <ImageView
            android:id="@+id/variation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:contentDescription="TODO"
            tools:ignore="ExtraText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thay đổi tiếng động"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/variation_header"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiệu ứng âm thanh"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:id="@+id/wrap_sound_variation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="3dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/variation_avatar_image_view_none"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/circle_xxl"
                android:background="@drawable/bg_circle_shape"
                android:scaleType="centerCrop"
                android:padding="14dp"
                />
            <ImageView
                android:id="@+id/variation_avatar_image_view_robot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/istockphoto"
                android:padding="5dp"
                android:background="@drawable/bg_circle_shape"
                />
            <ImageView
                android:id="@+id/variation_avatar_image_view_child"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/variation_avt_child"
                android:background="@drawable/bg_circle_shape"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/variation_wrap_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40dp"
        android:paddingTop="32dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_play_circle_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_combine_main"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true" />

                <SeekBar
                    android:id="@+id/variation_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:thumb="@drawable/ic_thumb_seekbar"
                    android:indeterminate="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="13dp"
                    android:layout_toRightOf="@+id/ic_play_circle_24"
                    android:backgroundTint="@color/bg_progressbar"
                    android:progressTint="@color/pink_500"
                    android:progressDrawable="@drawable/replay_prb_custom" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Chronometer
                    android:id="@+id/variation_timecurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_time"
                    android:gravity="left"
                    android:layout_marginLeft="45dp"
                    />

                <TextView
                    android:id="@+id/variation_timetotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_time"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="24dp"
                    android:text="00:21" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/variation_btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_record_btn_folder"
                    android:src="@drawable/baseline_save_alt_24"
                    android:contentDescription="TODO" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>