<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/foregroundColor"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:layout_marginBottom="1dp"
    >

    <CheckBox
        android:id="@+id/item_rcv_cbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

    />

    <TextView
        android:id="@+id/item_rcv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textColor="?attr/textColor"
        android:layout_toRightOf="@id/item_rcv_cbox"
        />

    <TextView
        android:id="@+id/item_rcv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/item_rcv_cbox"
        android:layout_below="@id/item_rcv_title"
        />
</RelativeLayout>
