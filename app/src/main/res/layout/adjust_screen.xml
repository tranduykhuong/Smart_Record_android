<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    >

    <LinearLayout
        android:id="@+id/nav_adjust"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="?attr/actionBarColor"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/adjust_btn_back"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/actionBarColor"
            android:layout_marginStart="12dp"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:text="@string/menu_title"
            android:paddingRight="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="?attr/backgroundColor">

        <LinearLayout
            android:id="@+id/adjust_btn_cut"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_custom_adjust"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="15dp"
                android:src="?attr/item_cut"
                />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:src="?attr/line_bottom"
                android:background="?attr/foregroundColor"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/cut_title"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="?attr/foregroundColor"
                tools:ignore="NestedWeights" />

            <ImageView
                android:onClick="changeLayoutFromAdjust"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_line"
                android:background="?attr/foregroundColor"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adjust_btn_adjust"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_custom_adjust"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="15dp"
                android:src="?attr/item_adjust"
                />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:src="?attr/line_bottom"
                android:background="?attr/foregroundColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/adjust_title"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="?attr/foregroundColor"
                tools:ignore="NestedWeights" />

            <ImageView
                android:onClick="changeLayoutFromAdjust"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_line"
                android:background="?attr/foregroundColor"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="?attr/backgroundColor">

        <LinearLayout
            android:id="@+id/adjust_btn_insertion"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_custom_adjust"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="15dp"
                android:src="?attr/item_insert"
                />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:src="?attr/line_bottom"
                android:background="?attr/foregroundColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/insertion"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="?attr/foregroundColor"
                tools:ignore="NestedWeights" />

            <ImageView
                android:onClick="changeLayoutFromAdjust"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_line"
                android:background="?attr/foregroundColor"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adjust_btn_harmonic"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_custom_adjust"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="15dp"
                android:src="?attr/item_harmonic"
                />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:src="?attr/line_bottom"
                android:background="?attr/foregroundColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/harmonic_title"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="?attr/foregroundColor"
                tools:ignore="NestedWeights" />

            <ImageView
                android:onClick="changeLayoutFromAdjust"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_line"
                android:background="?attr/foregroundColor"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="?attr/backgroundColor">

        <LinearLayout
            android:id="@+id/adjust_btn_divide"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_custom_adjust"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="15dp"
                android:src="?attr/item_divide"
                />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:src="?attr/line_bottom"
                android:background="?attr/foregroundColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/divide_title"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="?attr/foregroundColor"
                tools:ignore="NestedWeights" />

            <ImageView
                android:onClick="changeLayoutFromAdjust"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_line"
                android:background="?attr/foregroundColor"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adjust_btn_combine"
            android:onClick="changeLayoutFromAdjust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_custom_adjust"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="15dp"
                android:src="?attr/item_combine" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:src="?attr/line_bottom"
                android:background="?attr/foregroundColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/combine_title"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="?attr/foregroundColor"
                tools:ignore="NestedWeights" />

            <ImageView
                android:onClick="changeLayoutFromAdjust"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_line"
                android:background="?attr/foregroundColor"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>