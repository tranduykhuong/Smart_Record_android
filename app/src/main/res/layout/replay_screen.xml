<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_replay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:background="@color/pink_500"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="@color/pink_500"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:text="Replay"
            android:paddingRight="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/pink_500"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:elevation="0dp"
            android:background="@color/pink_500"
            android:outlineProvider="none"
            android:layout_weight="1"
            android:src="@drawable/ic_adjust"
            android:layout_marginLeft="50dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:elevation="0dp"
            android:background="@color/pink_500"
            android:outlineProvider="none"
            android:layout_weight="1"
            android:src="@drawable/ic_app_record" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:elevation="0dp"
            android:layout_weight="1"
            android:background="@color/pink_500"
            android:outlineProvider="none"
            android:src="@drawable/ic_speed_to_text"
            android:layout_marginRight="50dp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/little_gray">

        <TextView
            android:id="@+id/name_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:text="135 Trần Hưng Đạo 2, ngày 27/02/2023"
            android:paddingRight="40dp"/>

    </LinearLayout>

<!--    Part Sound Graph-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_audio_wave" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_voice" />

            <Button
                android:id="@+id/btn_increase_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:outlineProvider="none"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:text="x1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_time" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_repeat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:indeterminate="false"
                android:max="100"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="30"
                android:layout_marginBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/bg_progressbar"
                android:progressTint="@color/pink_500"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timecurrent_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_time"
                    android:gravity="left"
                    android:layout_marginLeft="24dp"
                    android:textStyle="bold"
                    android:text="00:12" />

                <TextView
                    android:id="@+id/timetotal_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_time"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:layout_marginRight="24dp"
                    android:text="00:21" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_first"
                android:layout_marginLeft="20dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_5s_prev" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_5s_next" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:elevation="0dp"
                android:background="@color/white"
                android:outlineProvider="none"
                android:layout_weight="1"
                android:src="@drawable/ic_last"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
