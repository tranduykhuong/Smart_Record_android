<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_menu_folder"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:background="@drawable/bg_radius_white_filter_folder">

        <TextView
            android:id="@+id/record_time_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Ghi chú"
            android:textColor="?attr/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/record_note_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edt_private_folder"
            android:drawablePadding="16dp"
            android:hint="Nhập ghi chú"
            android:inputType="text"
            android:padding="10dp"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_solid_bottom_filter_folder"
            android:layout_marginTop="12dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/record_modal_destroy_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/pink_500"
                android:paddingVertical="12dp"
                android:text="Hủy"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingVertical="12dp"
                android:background="@drawable/bg_solid_right_folder"
                />

            <TextView
                android:id="@+id/record_modal_ok_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/pink_500"
                android:text="Thêm"
                android:paddingVertical="12dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>