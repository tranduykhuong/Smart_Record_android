<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoActionBar"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/actionBarColor</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/actionBarColor</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">#F8F6F7</item>
        <item name="foregroundColor">@color/white</item>

        <item name="textColor">#423E3E</item>
        <item name="textColorPrimary">@color/pink_500</item>
        <item name="actionBarColor">@color/pink_500</item>

        <item name="backgroundState">#EFEFEF</item>
        <item name="android:backgroundTint">@null</item>
    </style>
</resources>